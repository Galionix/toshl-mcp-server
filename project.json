{
  "name": "@tasks/mcp-servers",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mcp-servers/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/mcp-servers",
        "main": "apps/mcp-servers/src/index.ts",
        "tsConfig": "apps/mcp-servers/tsconfig.app.json",
        "assets": ["apps/mcp-servers/src/assets"]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "@tasks/mcp-servers:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "@tasks/mcp-servers:build:development"
        },
        "production": {
          "buildTarget": "@tasks/mcp-servers:build:production"
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx apps/mcp-servers/src/index.ts"
      }
    }
  },
  "tags": ["type:application", "scope:mcp"]
}
